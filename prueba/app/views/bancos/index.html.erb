<div class="flex flex-col items-center justify-center">
  <p class="text-green-500"><%= notice %></p>

  <h1 class="text-2xl font-bold mb-4"><%= t(:banks) %></h1>
  <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    <%= link_to "Crear banco", new_banco_path %>
  </button> 
  <div id="bancos" class="w-full max-w-lg">
    <div class="border border-gray-200 shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th><%= t('table_bank.name') %></th>
            <th><%= t('table_bank.option') %></th>
          </tr>
        </thead>
        <tbody>
          <% @bancos.each do |banco| %>
            <%= render banco %>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to "Ver banco", banco, class: "text-blue-500 hover:underline" %>
            </td>
          </tr>
            
          <% end %>
        </tbody>
      </table>
  </div>

  
</div>
