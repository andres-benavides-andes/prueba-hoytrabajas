<div class="flex flex-col items-center justify-center">
  <p class="text-green-500"><%= notice %></p>

  <h1 class="text-2xl font-bold mb-4">Bancos</h1>

  <div id="bancos" class="w-full max-w-lg">
    <% @bancos.each do |banco| %>
      <%= render banco %>
      <p>
        <%= link_to "Show this banco", banco, class: "text-blue-500 hover:underline" %>
      </p>
    <% end %>
  </div>

  <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    <%= link_to "Crear banco", new_banco_path %>
  </button> 
</div>
