<div class="p-4 bg-white rounded-md shadow-md">
  <p class="text-green-600"><%= notice %></p>

  <%= render @banco %>

  <div class="mt-4">
    <%= link_to "Edit this banco", edit_banco_path(@banco), class: "rounded-md bg-primary text-white px-4 py-2 mr-2" %>
    <%= button_to "Destroy this banco", @banco, method: :delete, data: { confirm: 'Are you sure?' }, class: "rounded-md bg-red-600 text-white px-4 py-2 mr-2" %>
    <%= link_to "Back to bancos", bancos_path, class: "text-gray-500 hover:text-gray-700" %>
  </div>
</div>
