<div class="bg-white px-4 py-6 max-w-md mb-4">
  <%= form_with(model: proveedor) do |form| %>
    <% if proveedor.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <h2><%= pluralize(proveedor.errors.count, "error") %> prohibited this proveedor from being saved:</h2>

        <ul>
          <% proveedor.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white px-4 py-6">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= form.label :nombre %>
          <%= form.text_field :nombre, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div>
          <%= form.label :nit %>
          <%= form.text_field :nit, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div>
          <%= form.label :contacto %>
          <%= form.text_field :contacto, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div>
          <%= form.label :celular %>
          <%= form.text_field :celular, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div>
          <%= form.label :banco_id %>
          <%= form.select :banco_id, options_for_select(Banco.all.map { |b| [b.nombre, b.id] }), {}, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div>
          <%= form.label :numero_cuenta %>
          <%= form.text_field :numero_cuenta, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
      </div>

      <div class="mt-8">
        <%= form.submit "Guardar", class: "py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>

    </div>
  <% end %>
</div>
