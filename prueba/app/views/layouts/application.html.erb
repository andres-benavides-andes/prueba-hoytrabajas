<!doctype html>
<html>
  <head>
   <%= stylesheet_link_tag 'application', media: 'all' %>
  <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <ul class="flex">
      <li class="mr-6">
        <a class="text-blue-500 hover:text-blue-800" href="<%= bancos_path %>">Bancos</a>
      </li>
      <li class="mr-6">
        <a class="text-blue-500 hover:text-blue-800" href="<%= proveedors_path %>">Proveedores</a>
      </li>
      <li class="mr-6">
        <% if user_signed_in? %> 
        <span> Usuario: <%= current_user.email %> </span> 
          <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "text-blue-500 hover:underline" %> 
        <% else %>
          <%= button_to "Sign in", new_user_session_path, class: "text-blue-500 hover:underline" %> 
        <% end %>
      </li>

      
    </ul>
    <!-- this is where content will be rendered -->
    <%= yield %>
  </body>
</html>