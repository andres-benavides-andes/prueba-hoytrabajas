<div class="p-4 bg-white rounded-md shadow-md">
  <p class="text-green-600"><%= notice %></p>
  <div id="bancos" class="w-full max-w-lg">
    <div class="border border-gray-200 shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th><%= t('table_bank.name') %></th>
            <th><%= t('table_bank.option') %></th>
          </tr>
        </thead>
        <tbody>
            <%= render @banco %>
            <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to "Editar", edit_banco_path(@banco), class: "text-blue-500 hover:underline" %> | <%= button_to "Eliminar", @banco, method: :delete, class: "text-blue-500 hover:underline" %>
            </td>
          </tr>
        </tbody>
     </table>
    </div>
  </div>
</div>

  <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    <%= link_to "Volver a bancos", bancos_path %>
  </button>
